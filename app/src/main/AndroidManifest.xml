<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="instantlunch.pit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/LoginTheme" />
        <activity
            android:name=".views.RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/LoginTheme" />
        <activity
            android:name=".views.AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@style/LoginTheme" />
        <activity
            android:name=".views.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/LoginTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.ScanCodeActivity"
            android:label="@string/title_activity_scan_code"
            android:theme="@style/LoginTheme" />
        <activity
            android:name=".views.FavouriteRestaurantsActivity"
            android:label="@string/title_activity_favourite_restaurants"
            android:theme="@style/LoginTheme" />
        <activity
            android:name=".views.RestaurantsActivity"
            android:label="@string/title_activity_restaurants"
            android:theme="@style/LoginTheme"></activity>
    </application>

</manifest>
